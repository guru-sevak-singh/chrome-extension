{
    "manifest_version": 3,
    "name": "Remove Distraction",
    "version": "1.1",
    "description": "Displays an alert when YouTube is opened.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://youtube.com/shorts/*", "*://www.instagram.com/*", "*://www.youtube.com/shorts/*", "*://instagram.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  